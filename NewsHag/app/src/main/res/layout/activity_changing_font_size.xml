<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="badassapps.aaron.newshag.ChangingFontSize">

    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Large"
        android:id="@+id/large"
        android:background="#DC143C"
        android:textColor="#F0FFFF"
        android:onClick="ClickingLarge"
        android:shadowRadius="4"
        android:shadowColor="#000000"
        android:layout_alignTop="@+id/medium"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Medium"
        android:id="@+id/medium"
        android:background="#DC143C"
        android:textColor="#F0FFFF"
        android:onClick="ClickingMedium"
        android:shadowRadius="4"
        android:shadowColor="#000000"
        android:layout_alignTop="@+id/small"
        android:layout_toRightOf="@+id/large"
        android:layout_toEndOf="@+id/large" />

    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Small"
        android:id="@+id/small"
        android:background="#DC143C"
        android:textColor="#F0FFFF"
        android:onClick="ClickingSmall"
        android:shadowRadius="4"
        android:shadowColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/medium"
        android:layout_toEndOf="@+id/medium" />

    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="X-Small"
        android:background="#DC143C"
        android:textColor="#F0FFFF"
        android:id="@+id/xsmall"
        android:onClick="ClickingXSmall"
        android:layout_alignTop="@+id/small"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView2"
        android:background="@drawable/newhag"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To change News Hag's text size, please select a button a below, Thanks!"
        android:textColor="#DC143C"
        android:textSize="30sp"
        android:fontFamily="casual"
        android:id="@+id/changingText"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:shadowRadius="4"
        android:shadowColor="#000000"/>

</RelativeLayout>
